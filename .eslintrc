{
  "extends": ["airbnb", "airbnb-typescript/base"],
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["./tsconfig.json"]
      }
    }
  ],
  "rules": {
    "no-console": "off",
    "indent": ["error", "tab"],
    "jsx-quotes": ["error", "prefer-double"],
    "max-len": ["error", {
      "code": 80,
      "tabWidth": 4,
      "comments": 70,
      "ignoreUrls": true
      }]
  }
}