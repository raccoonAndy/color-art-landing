{
  "extends": ["airbnb", "airbnb-typescript/base"],
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["./tsconfig.json"]
      }
    }
  ],
  "rules": {
    "no-bitwise": "off",
    "no-console": "off",
    "func-names": "off",
    "no-nested-ternary": "off",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "jsx-quotes": ["error", "prefer-double"],
    "max-len": ["error", {
      "code": 95,
      "comments": 70,
      "ignoreUrls": true
      }]
  }
}